#!/bin/bash

JSON commands new

JSON options new

JSON options put "-h" "_help"
JSON options put "-fr" "_force_recursive"

_help() {
    JSON help_info new
    JSON help_info put "_help" "Muestra la ayuda."
    shelp commands options help_info "upload"
    exit 0
}


dir_from="${@:2}"
dir_from3="${@:3}"
comando_rm="rm"
_force_recursive() {
    dir_from="$dir_from3"
    comando_rm="rm-fr"
}

export_module commands options

if [ -z "$dir_from" ]; then
    sconsole -e "Se requiere la direccion del archibo"
    exit 0
fi
echo "$dir_from"
curl --request POST "$REPO_UPLOAD_PATH" \
    -F "$dir_from"="$comando_rm"
